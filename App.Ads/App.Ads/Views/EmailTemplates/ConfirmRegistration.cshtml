@model App.Core.Data.UserProfile

@{ 
    var membership = (App.Core.Data.Membership)ViewBag.Membership;
    var sendEmailModel = (App.Core.Models.SendEmailModel)ViewBag.SendEmailModel; 
    var activationLink = sendEmailModel.WebsiteURL + Url.Action("confirmation", "verification", new { guid = membership.EmailConfirmationToken, area = "account" }); 
}

<p>
Dear @Model.LastName,
</p>
<br />
<p>
    With your email address it was registered new account at <a href="@sendEmailModel.WebsiteURL">@sendEmailModel.WebsiteName</a>.<br />
    To activate your account, go tob the link:<br />
    <a href="@activationLink ">@activationLink</a>
</p>
<br />

<p>
    We are asking for confirmation of your account registration to get sure of valid email.<br />
    It is required to avoid forgery emails.
    If you did not perform a registration new account just ignore this email message.
</p>
<br />
<br />
<p>
    <a href="@sendEmailModel.WebsiteURL">@sendEmailModel.WebsiteName</a> - @sendEmailModel.WebsiteTitle 
</p>
<br />
<small>This message is genearted automatically.</small>