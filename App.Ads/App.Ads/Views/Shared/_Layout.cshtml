@using MvcSiteMapProvider;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/common")
    @Styles.Render("~/Content/css")
    @RenderSection("style", required: false)

    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    @Scripts.Render("~/bundles/jqHead")
</head>
<body data-ng-app="shopApp">
    <nav class="navbar navbar-default" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand ">
                    <span class="logo">
                        <strong>OhMy</strong><span class="handwriting">Bazaar!</span><br>
                        <small>a minimalist theme built with bootstrap </small>
                    </span>
                </a>
            </div>
            <section id="login">
                <div class="pull-right">
                    @Html.Partial("_LoginPartial")
                </div>
            </section>
        </div>
    </nav>
    @RenderSection("SearchBox", required: false)

    <div class="container">
        <br>
        <div class="row">
            @*@Html.MvcSiteMap().Menu(false, true, true)*@

            @if (SiteMaps.Current.CurrentNode != null && (SiteMaps.Current.CurrentNode != SiteMaps.Current.CurrentNode.RootNode))
            {
                <div class="col-sm-12">
                    @Html.MvcSiteMap().SiteMapPath()
                </div>
            }
        </div>

        @RenderBody()

    </div>
    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-xs-12">
                    <p><strong>© Bootstrap Classifieds 2014</strong></p>
                    <p>All rights reserved</p>
                </div>
                <div class="col-sm-8 col-xs-12">
                    <p class="footer-links">
                        <a href="index.html" class="active">Home</a>
                        <a href="typography.html">Typography</a>
                        <a href="terms.html">Terms and Conditions</a>
                        <a href="contact.html">Contact Us</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/plugin")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/angularstrap")
    <script>
        window.data = {
            id: '@ViewBag.id'
        }
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
