@using MvcSiteMapProvider;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    @{
        string pageTitle = @ViewBag.Title ?? "Malaysia New Marketplace - MYBazaar.com.my";
    }
    <title>@pageTitle</title>
    <meta property="og:title" content="iProperty - New Property For Sale" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://newlaunch.iproperty.com.my/" />
    <meta property="og:image" content="http://assets.newlaunch.ippstatic.com/common/logomy.png" />
    <meta property="og:description" content="Looking to Buy, Sell or Rent Malaysia Property and Real Estate? Search Malaysia's No.1 Property Classifieds for Free Today!" />
    <meta property="og:site_name" content="iProperty.com.my" />
    <meta property="fb:admins" content="709385591" />

    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/css")
    @RenderSection("style", required: false)

    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    @Scripts.Render("~/bundles/jqHead")
</head>
<body data-ng-app="shopApp" data-ng-controller="MainCtrl">
    <script>
        window.fbAsyncInit = function () {
            FB.init({
                appId: '@System.Configuration.ConfigurationManager.AppSettings["fbId"]',
                xfbml: true,
                version: 'v2.2'
            });
        };

        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) { return; }
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    <nav class="navbar navbar-default" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand ">
                    <span class="logo">
                        <strong>MY</strong><span class="handwriting">BAZAAR.com.my</span><br>
                        <small>Malaysia New Market Place</small>
                    </span>
                </a>
            </div>
            <section id="login">
                <div class="pull-right">
                    @Html.Partial("_LoginPartial")
                </div>
            </section>
        </div>
    </nav>
    @if (IsSectionDefined("SearchBox"))
    {
        @RenderSection("SearchBox")
        <br />
    }
    else
    {
        <hr class="topbar">
    }
    <div id="wrapper">

        <div id="page-content-wrapper">

            @Html.Partial("_AjaxError")
            <div class="container">
                <div class="row">
                    @*@Html.MvcSiteMap().Menu(false, true, true)*@
                    <div class="col-sm-12">
                        @RenderSection("PageTitle", required: false)
                        @if (SiteMaps.Current.CurrentNode != null && (SiteMaps.Current.CurrentNode != SiteMaps.Current.CurrentNode.RootNode))
                        {

                            @Html.MvcSiteMap().SiteMapPath()

                        }
                    </div>
                </div>

                @RenderBody()

            </div>

            <div class="footer">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-4 col-xs-12">
                            <p><strong>© Bootstrap Classifieds 2014</strong></p>
                            <p>All rights reserved</p>
                        </div>
                        <div class="col-sm-8 col-xs-12">
                            <p class="footer-links">
                                <a href="index.html" class="active">Home</a>
                                <a href="typography.html">Typography</a>
                                <a href="terms.html">Terms and Conditions</a>
                                <a href="contact.html">Contact Us</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/plugin")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/angularstrap")
    <script>
        window.data = {
            id: '@ViewBag.id'
        }
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
