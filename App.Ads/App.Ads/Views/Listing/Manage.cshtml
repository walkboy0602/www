@model IEnumerable<App.Core.ViewModel.DisplayListingViewModel>
@using App.Ads.Code.Helpers
    @{
        ViewBag.Title = "Index";
    }

    <div class="col-sm-3">
        @Html.Partial("~/Views/PartialView/_sidepanel.cshtml")
    </div>
    <div class="col-sm-9">
        <div class="panel panel-default">
            <div class="panel-heading">Manage adverts</div>
            <div class="panel-body">

                <div class="table-wrapper">
                    <div class="col-sm-12">
                        <div class="row">

                            <table class="table edit-listings">
                                <thead>
                                    <tr>
                                        <th class="col-md-2"></th>
                                        <th></th>
                                        <th></th>
                                        <th>Date&nbsp;posted</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="img">
                                                    <img src="http://templates.expresspixel.com/bootlistings/css/images/listings/4.jpg" alt="pic">
                                                </div>
                                            </td>
                                            <td class="main-td">
                                                @Html.ActionLink(ListingHelper.FormatTitle(item.Title), "Save", new { id = item.id })
                                                <a href="#" class="no-views">(11 views)</a>
                                                <br>
                                                <a class="edit-ad" href="account_ad_create.html">Edit ad</a>
                                                <a class="extend-ad" href="#" data-toggle="tooltip" title="" data-original-title="Extend ad by 30 days">Extend for 30 days</a>
                                                <a class="remove-ad" href="#">Remove this ad</a>
                                                <p>
                                                    @ListingHelper.FormatDescription(item.Description, 167)
                                                </p>

                                            </td>
                                            <td>
                                                <span class="@ListingHelper.FormatListingStatusCss(item.Status)" data-toggle="tooltip" data-original-title="@ListingHelper.FormatListingStatusToolTip(item.Status)">
                                                    @Enum.GetName(typeof(App.Core.ViewModel.XtEnum.ListingStatus), item.Status)
                                                </span>
                                            </td>
                                            <td>
                                                @item.CreateDate.ToString("MMMM d, yyyy")
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
